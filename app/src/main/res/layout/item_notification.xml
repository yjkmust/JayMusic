<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/notification_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/jay"
            android:scaleType="fitXY" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我真的受伤了"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/notification_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我真的受伤了-张学友"
                android:textColor="#000"
                android:layout_below="@+id/notification_title"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_img_close"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/notification_pre"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_pre"
                android:layout_toLeftOf="@+id/notification_playorstop"
                android:layout_marginRight="30dp"
                android:layout_centerInParent="true"/>
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/notification_playorstop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_img_notification_playing"
                android:layout_centerInParent="true"/>
                <!--app:border_color="#00796B"-->
                <!--app:border_width="2dp"-->
                <!--app:progress_color="#18db8a"/>-->
            <ImageView
                android:id="@+id/notification_Next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_next"
                android:layout_toRightOf="@id/notification_playorstop"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"/>

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
